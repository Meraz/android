<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/newStudentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher"
        android:onClick="onButtonClicked"
        android:contentDescription="@string/main_new_student_button" />

    <ImageButton
        android:id="@+id/coursesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/newStudentButton"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_launcher"
        android:onClick="onButtonClicked"
        android:contentDescription="@string/main_courses_and_schedule_button" />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newStudentButton"
        android:layout_below="@+id/newStudentButton"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher"
        android:onClick="onButtonClicked"
        android:contentDescription="@string/main_map_button" />

    <ImageButton
        android:id="@+id/studentUnionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coursesButton"
        android:layout_alignTop="@+id/mapButton"
        android:src="@drawable/ic_launcher"
        android:onClick="onButtonClicked"
        android:contentDescription="@string/main_student_union_button"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_alignTop="@+id/imageButton6"
        android:src="@drawable/ic_launcher"
        android:onClick="onButtonClicked" />
    
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/studentUnionButton"
        android:layout_below="@+id/studentUnionButton"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher"
        android:onClick="onButtonClicked" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coursesButton"
        android:layout_alignRight="@+id/newStudentButton"
        android:text="@string/main_new_student_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coursesButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="@string/main_courses_and_schedule_button" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/studentUnionButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp"
        android:text="@string/main_map_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/studentUnionButton"
        android:layout_alignLeft="@+id/studentUnionButton"
        android:text="@string/main_student_union_button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton5"
        android:layout_alignLeft="@+id/textView1"
        android:text="Logga in" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton6"
        android:text="Logga ut" />
    
</RelativeLayout>